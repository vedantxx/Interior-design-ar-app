<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Splash_Screen_Main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#28FFBF">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:srcCompat="@drawable/logo_splash_screen" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#BCFFB9"
            android:fontFamily="@font/ubuntu_mono_bold"
            android:gravity="center"
            android:paddingTop="20dp"
            android:text="Made With ❤️ By"
            android:textColor="@color/Black"
            android:textStyle="bold
" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#BCFFB9"
            android:fontFamily="@font/ubuntu_mono_bold"
            android:gravity="center_horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="20dp"
            android:text="Aarnav , Ria , Amey"
            android:textColor="@color/Black"
            android:textStyle="bold" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>